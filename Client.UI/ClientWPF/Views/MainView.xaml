<Window x:Class="ClientWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Menú Principal" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        ResizeMode="CanResize"
        MouseDown="Window_MouseDown"
        MaxHeight="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Height}"
        MaxWidth="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Width}">
    <!-- Los MaxHeight/MaxWidth de arriba evitan que tape la barra de tareas al maximizar -->

    <Window.Resources>
        <!-- PALETA DE COLORES (Igual al Login) -->
        <SolidColorBrush x:Key="SurfaceBrush" Color="#F2F0E9"/>
        <SolidColorBrush x:Key="PrimaryTextBrush" Color="#023E38"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#D92027"/>
        <SolidColorBrush x:Key="WhiteBrush" Color="#FFFFFF"/>

        <!-- FONDO DEGRADADO -->
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#023E38" Offset="0.0"/>
            <GradientStop Color="#012925" Offset="1.0"/>
        </LinearGradientBrush>

        <!-- ESTILO DE TARJETAS (MÓDULOS) -->
        <Style x:Key="ModuleCardStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="160"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Sombra suave -->
                            <Border CornerRadius="20" Background="Black" Opacity="0.2" Margin="0,5,0,-5">
                                <Border.Effect>
                                    <BlurEffect Radius="15"/>
                                </Border.Effect>
                            </Border>

                            <!-- Contenido del botón -->
                            <Border x:Name="border" CornerRadius="20" Background="{TemplateBinding Background}" BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <!-- Efecto Hover: Se vuelve rojo acento con texto blanco -->
                                <Setter TargetName="border" Property="Background" Value="#D92027"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#D92027" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.96" ScaleY="0.96" CenterX="75" CenterY="75"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ESTILO BOTONES DE VENTANA (Reutilizados del Login) -->
        <Style x:Key="WindowControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#80FFFFFF"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1AFFFFFF"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Tag" Value="Close">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="Transparent">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#D92027"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ESTILO BOTÓN TEXTO (Logout) -->
        <Style x:Key="LogoutButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF8A8A"/>
            <!-- Rojo claro -->
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent" Padding="10,5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#FF4D4D"/>
                                <!-- Rojo más vivo -->
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FF4D4D" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!-- ESTRUCTURA PRINCIPAL -->
    <Border Background="{StaticResource BackgroundGradient}" CornerRadius="0">
        <Grid>
            <!-- Filas: Barra Título, Header Bienvenida, Contenido (Cards), Footer -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 1. BARRA SUPERIOR / BOTONES VENTANA -->
            <Grid Grid.Row="0" Margin="0,0,0,0">
                <!-- Título pequeño izq -->
                <TextBlock Text="DISTRIBUIDAS - ERP" Foreground="#60FFFFFF" FontSize="12" VerticalAlignment="Center" Margin="20,10,0,0" FontWeight="SemiBold"/>

                <!-- Botones Control (Derecha) -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Button Style="{StaticResource WindowControlButtonStyle}" Click="BtnMinimize_Click">
                        <Path Data="M0,5 L10,5" Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" StrokeThickness="1.5"/>
                    </Button>
                    <Button Style="{StaticResource WindowControlButtonStyle}" Click="BtnMaximize_Click">
                        <Path Data="M0,0 L10,0 L10,10 L0,10 z" Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" StrokeThickness="1.5"/>
                    </Button>
                    <Button Style="{StaticResource WindowControlButtonStyle}" Click="BtnClose_Click" Tag="Close">
                        <Path Data="M0,0 L10,10 M0,10 L10,0" Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" StrokeThickness="1.5"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- 2. HEADER DE BIENVENIDA -->
            <StackPanel Grid.Row="1" Margin="40,20,40,20">
                <TextBlock Text="SISTEMA INTEGRADO" FontSize="32" FontWeight="Black" Foreground="{StaticResource SurfaceBrush}" Opacity="0.9"/>
                <TextBlock x:Name="txtBienvenida" Text="Cargando..." FontSize="20" Foreground="{StaticResource AccentBrush}" FontWeight="SemiBold" Margin="0,5,0,0"/>
                <Separator Background="#30FFFFFF" Margin="0,20,0,10"/>
            </StackPanel>

            <!-- 3. GRID DE MÓDULOS -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="30,0">
                <UniformGrid Columns="3" Margin="0,0,0,20">

                    <Button x:Name="btnSeguridad" Style="{StaticResource ModuleCardStyle}" Click="BtnSeguridad_Click">
                        <StackPanel>
                            <TextBlock Text="🔒" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Seguridad" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource ModuleCardStyle}" Click="BtnContabilidad_Click">
                        <StackPanel>
                            <TextBlock Text="📊" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Contabilidad" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource ModuleCardStyle}" Click="BtnActivos_Click">
                        <StackPanel>
                            <TextBlock Text="🏢" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Activos" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource ModuleCardStyle}" Click="BtnMantenimiento_Click">
                        <StackPanel>
                            <TextBlock Text="🔧" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Mantenimiento" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource ModuleCardStyle}" Click="BtnBiblioteca_Click">
                        <StackPanel>
                            <TextBlock Text="📚" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Biblioteca" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Tarjeta Vacía o de Configuración (Opcional, para llenar el grid si es necesario) -->
                    <!-- Puedes quitar esto si prefieres que queden huecos -->
                    <Button Style="{StaticResource ModuleCardStyle}" Cursor="Arrow" Opacity="0.3" IsHitTestVisible="False">
                        <StackPanel>
                            <TextBlock Text="⚙️" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Próximamente" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                </UniformGrid>
            </ScrollViewer>

            <!-- 4. FOOTER / CERRAR SESIÓN -->
            <Grid Grid.Row="3" Margin="30,10,30,20">
                <Button Content="← Cerrar Sesión" 
                        HorizontalAlignment="Left"
                        Style="{StaticResource LogoutButtonStyle}"
                        Click="BtnLogout_Click"/>

                <TextBlock Text="v1.0.0" Foreground="#40FFFFFF" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>

        </Grid>
    </Border>
</Window>