<Window x:Class="ClientWPF.Views.MantenimientoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Gestión de Mantenimiento" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <!-- COLORES -->
        <SolidColorBrush x:Key="BgColor" Color="#F8F9FA"/>
        <SolidColorBrush x:Key="CardColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="PrimaryColor" Color="#2C3E50"/>
        <SolidColorBrush x:Key="AccentColor" Color="#27AE60"/>
        <SolidColorBrush x:Key="DangerColor" Color="#E74C3C"/>
        <SolidColorBrush x:Key="IconGray" Color="#95A5A6"/>

        <!-- ESTILO BOTÓN PRIMARIO -->
        <Style x:Key="BtnPrimary" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#34495E"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1A252F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ESTILO BOTÓN DE ICONO PEQUEÑO -->
        <Style x:Key="BtnAction" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#ECF0F1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#BDC3C7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ESTILO INPUTS -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#DCDCDC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border x:Name="border" Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="5">
                                <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                            </Border>
                            <TextBlock Text="{TemplateBinding Tag}" 
                                       Foreground="#BDC3C7" 
                                       VerticalAlignment="Center" 
                                       Margin="12,0,0,0"
                                       IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ESTILO DATAGRID -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F0F0F0"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="RowHeight" Value="36"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Foreground" Value="#7F8C8D"/>
                        <Setter Property="Padding" Value="10,0,0,10"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="BorderThickness" Value="0,0,0,2"/>
                        <Setter Property="BorderBrush" Value="#F0F0F0"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="10,0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#F4F6F7"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- LAYOUT PRINCIPAL -->
    <Border Background="{StaticResource BgColor}" CornerRadius="15" BorderBrush="#D5DBDB" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Grid Grid.Row="0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{StaticResource PrimaryColor}" Width="36" Height="36" CornerRadius="10" Margin="0,0,12,0">
                        <Path Data="M22.7 19l-9.1-9.1c.9-2.3.4-5-1.5-6.9-2-2-5-2.4-7.4-1.3L9 6 6 9 1.6 4.7C.4 7.1.9 10.1 2.9 12.1c1.9 1.9 4.6 2.4 6.9 1.5l9.1 9.1c.4.4 1 .4 1.4 0l2.3-2.3c.5-.4.5-1.1.1-1.4z" 
                              Fill="White" Width="18" Height="18" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>

                    <TextBlock Text="Gestión de Mantenimiento" 
                               FontSize="22" FontWeight="Bold" 
                               Foreground="{StaticResource PrimaryColor}" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button x:Name="BtnRecargar" Click="BtnRecargar_Click" Style="{StaticResource BtnAction}" ToolTip="Recargar datos">
                        <Path Data="M12 4V1L8 5l4 4V6c3.31 0 6 2.69 6 6 0 1.01-.25 1.97-.7 2.8l1.46 1.46C19.54 15.03 20 13.57 20 12c0-4.42-3.58-8-8-8zm0 14c-3.31 0-6-2.69-6-6 0-1.01.25-1.97.7-2.8L5.24 7.74C4.46 8.97 4 10.43 4 12c0 4.42 3.58 8 8 8v3l4-4-4-4v3z" 
                              Fill="{StaticResource IconGray}" Width="16" Height="16" Stretch="Uniform"/>
                    </Button>
                    <Button x:Name="BtnCerrar" Click="BtnCerrar_Click" Style="{StaticResource BtnAction}" ToolTip="Cerrar ventana" Margin="5,0,0,0">
                        <Path Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" 
                              Fill="{StaticResource DangerColor}" Width="14" Height="14" Stretch="Uniform"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- CONTENIDO CON TABS (CORREGIDO) -->
            <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0" Margin="0,10,0,0">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <!-- 1. ESTABLECEMOS EL COLOR POR DEFECTO AQUÍ (NO EN TRIGGERS) -->
                        <Setter Property="Foreground" Value="#95A5A6"/>
                        <Setter Property="Cursor" Value="Hand"/>

                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border x:Name="Border" Background="Transparent" CornerRadius="20" Padding="20,8" Margin="0,0,5,0">
                                        <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" 
                                                          TextElement.FontSize="14" TextElement.FontWeight="SemiBold"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <!-- 2. Hover cuando NO está seleccionado -->
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsSelected" Value="False"/>
                                            </MultiTrigger.Conditions>
                                            <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
                                            <Setter TargetName="Border" Property="Background" Value="#ECF0F1"/>
                                        </MultiTrigger>

                                        <!-- 3. Cuando está SELECCIONADO -->
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="{StaticResource PrimaryColor}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>

                                        <!-- 4. Hover cuando YA está SELECCIONADO -->
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsSelected" Value="True"/>
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Border" Property="Background" Value="#34495E"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </MultiTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <!-- PESTAÑA 1: REGISTRO -->
                <TabItem Header="REGISTRO">
                    <Grid Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Tarjeta Izquierda -->
                        <Border Grid.Column="0" Background="{StaticResource CardColor}" CornerRadius="10" Margin="0,0,15,0" Padding="20">
                            <Border.Effect>
                                <DropShadowEffect Color="#E0E0E0" BlurRadius="10" ShadowDepth="4" Opacity="0.5"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="Resumen" FontSize="16" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" Margin="0,0,0,20"/>

                                <TextBlock Text="Fecha" Foreground="#95A5A6" FontSize="12" Margin="0,0,0,4"/>
                                <DatePicker x:Name="dpFecha" Height="38" Margin="0,0,0,15"/>

                                <TextBlock Text="Responsable" Foreground="#95A5A6" FontSize="12" Margin="0,0,0,4"/>
                                <TextBox x:Name="txtResponsable" Margin="0,0,0,25"/>

                                <Border Height="1" Background="#F0F0F0" Margin="0,10"/>

                                <TextBlock Text="Total Estimado" Foreground="#95A5A6" HorizontalAlignment="Right"/>
                                <TextBlock x:Name="lblTotal" Text="$ 0.00" FontSize="32" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" HorizontalAlignment="Right"/>

                                <Button x:Name="BtnGuardar" Click="BtnGuardar_Click" Content="GUARDAR TODO" Style="{StaticResource BtnPrimary}" Margin="0,30,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Tarjeta Derecha -->
                        <Border Grid.Column="1" Background="{StaticResource CardColor}" CornerRadius="10" Padding="20">
                            <Border.Effect>
                                <DropShadowEffect Color="#E0E0E0" BlurRadius="10" ShadowDepth="4" Opacity="0.5"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Barra de Agregar -->
                                <Grid Grid.Row="0" Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Margin="0,0,10,0">
                                        <TextBlock Text="Activo" Foreground="#95A5A6" FontSize="12" Margin="0,0,0,4"/>
                                        <ComboBox x:Name="cboActivo" Height="38" Padding="5"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                        <TextBlock Text="Actividad" Foreground="#95A5A6" FontSize="12" Margin="0,0,0,4"/>
                                        <ComboBox x:Name="cboActividad" Height="38" Padding="5"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Margin="0,0,10,0">
                                        <TextBlock Text="Costo" Foreground="#95A5A6" FontSize="12" Margin="0,0,0,4"/>
                                        <TextBox x:Name="txtCosto"/>
                                    </StackPanel>

                                    <Button Grid.Column="3" x:Name="BtnAgregar" Click="BtnAgregar_Click" Style="{StaticResource BtnPrimary}" VerticalAlignment="Bottom" Padding="0">
                                        <Path Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" Fill="White" Width="14" Height="14" Stretch="Uniform"/>
                                    </Button>
                                </Grid>

                                <!-- Grilla -->
                                <DataGrid Grid.Row="1" x:Name="gridDetalle">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Activo" Binding="{Binding NombreActivo}" Width="2*"/>
                                        <DataGridTextColumn Header="Actividad" Binding="{Binding NombreActividad}" Width="2*"/>
                                        <DataGridTextColumn Header="Costo" Binding="{Binding Valor, StringFormat=C2}" Width="*"/>
                                        <DataGridTemplateColumn Width="50">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Click="BtnQuitarDetalle_Click" Style="{StaticResource BtnAction}" ToolTip="Quitar">
                                                        <Path Data="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z" Fill="{StaticResource DangerColor}" Width="14" Height="14" Stretch="Uniform"/>
                                                    </Button>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>

                <!-- PESTAÑA 2: CATÁLOGOS -->
                <TabItem Header="CATÁLOGOS">
                    <Grid Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- COLUMNA IZQ: Actividades -->
                        <Border Grid.Column="0" Background="{StaticResource CardColor}" CornerRadius="10" Padding="20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Actividades" FontSize="16" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" Margin="0,0,0,15"/>

                                <StackPanel Grid.Row="1" Margin="0,0,0,15">
                                    <TextBox x:Name="txtBuscarActividad" TextChanged="TxtBuscarActividad_TextChanged" Tag="🔍 Buscar..." Margin="0,0,0,10"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="txtCodAct" Margin="0,0,5,0" Tag="Cód." ToolTip="Código"/>
                                        <TextBox Grid.Column="1" x:Name="txtNomAct" Margin="0,0,5,0" Tag="Descripción" ToolTip="Nombre"/>

                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <Button x:Name="BtnNuevaActividad" Click="BtnNuevaActividad_Click" Style="{StaticResource BtnAction}" Background="#ECF0F1" ToolTip="Nuevo">
                                                <Path Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" Fill="{StaticResource IconGray}" Width="14" Height="14" Stretch="Uniform"/>
                                            </Button>
                                            <Button x:Name="BtnGuardarActividad" Click="BtnGuardarActividad_Click" Content="Guardar" Style="{StaticResource BtnPrimary}" Margin="5,0,0,0" Width="80"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>

                                <DataGrid Grid.Row="2" x:Name="gridActividades">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="CÓD" Binding="{Binding Id}" Width="60" FontWeight="SemiBold"/>
                                        <DataGridTextColumn Header="DESCRIPCIÓN" Binding="{Binding Descripcion}" Width="*"/>
                                        <DataGridTemplateColumn Width="80">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                        <Button Click="BtnEditarActividad_Click" Style="{StaticResource BtnAction}" ToolTip="Editar">
                                                            <Path Data="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z" 
                                                                  Fill="{StaticResource PrimaryColor}" Width="14" Height="14" Stretch="Uniform"/>
                                                        </Button>
                                                        <Button Click="BtnEliminarActividad_Click" Style="{StaticResource BtnAction}" ToolTip="Eliminar">
                                                            <Path Data="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z" 
                                                                  Fill="{StaticResource DangerColor}" Width="14" Height="14" Stretch="Uniform"/>
                                                        </Button>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>

                        <!-- COLUMNA DER: Activos -->
                        <Border Grid.Column="2" Background="{StaticResource CardColor}" CornerRadius="10" Padding="20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Activos" FontSize="16" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" Margin="0,0,0,15"/>

                                <StackPanel Grid.Row="1" Margin="0,0,0,15">
                                    <TextBox x:Name="txtBuscarActivo" TextChanged="TxtBuscarActivo_TextChanged" Tag="🔍 Buscar..." Margin="0,0,0,10"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="txtIdActivo" Margin="0,0,5,0" Tag="ID" ToolTip="ID"/>
                                        <TextBox Grid.Column="1" x:Name="txtNomActivo" Margin="0,0,5,0" Tag="Nombre" ToolTip="Nombre"/>

                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <Button x:Name="BtnNuevoActivo" Click="BtnNuevoActivo_Click" Style="{StaticResource BtnAction}" Background="#ECF0F1" ToolTip="Nuevo">
                                                <Path Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" Fill="{StaticResource IconGray}" Width="14" Height="14" Stretch="Uniform"/>
                                            </Button>
                                            <Button x:Name="BtnGuardarActivo" Click="BtnGuardarActivo_Click" Content="Guardar" Style="{StaticResource BtnPrimary}" Margin="5,0,0,0" Width="80"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>

                                <DataGrid Grid.Row="2" x:Name="gridActivos">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" FontWeight="SemiBold"/>
                                        <DataGridTextColumn Header="DESCRIPCIÓN" Binding="{Binding Descripcion}" Width="*"/>
                                        <DataGridTemplateColumn Width="80">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                        <Button Click="BtnEditarActivo_Click" Style="{StaticResource BtnAction}" ToolTip="Editar">
                                                            <Path Data="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z" 
                                                                  Fill="{StaticResource PrimaryColor}" Width="14" Height="14" Stretch="Uniform"/>
                                                        </Button>
                                                        <Button Click="BtnEliminarActivo_Click" Style="{StaticResource BtnAction}" ToolTip="Eliminar">
                                                            <Path Data="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z" 
                                                                  Fill="{StaticResource DangerColor}" Width="14" Height="14" Stretch="Uniform"/>
                                                        </Button>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>

                <!-- PESTAÑA 3: REPORTES -->
                <TabItem Header="REPORTES">
                    <Border Background="{StaticResource CardColor}" Margin="20" CornerRadius="10">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Path Data="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2z" 
                                  Fill="#E0E0E0" Width="60" Height="60" Stretch="Uniform" Margin="0,0,0,20"/>
                            <TextBlock Text="Módulo de Reportes" FontSize="18" FontWeight="Bold" Foreground="#95A5A6"/>
                            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                                <Button x:Name="BtnRepGastos" Click="BtnRepGastos_Click" Content="Reporte de Gastos" Style="{StaticResource BtnPrimary}" Margin="5" Width="180"/>
                                <Button x:Name="BtnRepMatriz" Click="BtnRepMatriz_Click" Content="Matriz Cruzada" Style="{StaticResource BtnPrimary}" Margin="5" Width="180"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </TabItem>
            </TabControl>
        </Grid>
    </Border>
</Window>